<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles.css">
    <link rel="icon" href="../Todo.svg">
    
    <title>To Do List - V1</title>
</head>

<body>

    <div class="box" id="heading">
        <h1>
            <%= listName %>
        </h1>
    </div>

    <div class="box">


        <% newListItem.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listName %>"></input>
            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input class="" type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value="<%= listName %>">+</button>
        </form>

    </div>

    <footer>Â© github.com/OmNC21</footer>
</body>

</html>